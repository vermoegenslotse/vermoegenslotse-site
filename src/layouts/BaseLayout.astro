---
const { title = "Vermögenslotse" } = Astro.props;
---
<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/tokens.css" />
  </head>
  <body>
    <header class="wrap header">
      <a class="brand" href="/">Vermögenslotse</a>
      <nav class="nav">
        <a href="/impressum">Impressum</a>
        <a href="/datenschutz">Datenschutz</a>
      </nav>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="wrap footer">
      <div class="muted">
        © {new Date().getFullYear()} Vermögenslotse · Rechtsträger: Christian Gradt Consulting
      </div>
      <div class="muted">
        <a href="/impressum">Impressum</a> · <a href="/datenschutz">Datenschutz</a>
      </div>
    </footer>
  </body>
</html>
