---
const { title = "Vermögenslotse" } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/tokens.css" />
  </head>

  <body>
    <header class="siteHeader">
      <div class="container headerInner">
        <div class="logo">
  <a href="/" class="logoLink" aria-label="Vermögenslotse – Start">
    <img src="/images/vermoegenslotse-logo.png" alt="Vermögenslotse" class="logoImg" />
  </a>
</div>
        <nav class="mainNav">
          <a href="/">Start</a>
          <a href="/vermoegenscheck">Vermögenscheck</a>
          <a href="/impressum">Rechtliches</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="siteFooter">
      <div class="container footerInner">
        <div>
          © {new Date().getFullYear()} Vermögenslotse
        </div>
        <div class="footerLinks">
          <a href="/impressum">Impressum</a>
          <a href="/datenschutz">Datenschutz</a>
        </div>
      </div>
    </footer>
  </body>
</html>
